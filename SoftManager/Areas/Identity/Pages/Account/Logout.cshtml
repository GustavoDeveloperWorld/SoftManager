@page
@model LogoutModel
@{
    ViewData["Title"] = "Sair";
}

<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Pages/" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post">
    <button type="submit" class="nav-link btn btn-link text-dark">Clique aqui para sair</button>
            </form>

        }
        else
        {
            <p>Você saiu com sucesso da aplicação.</p>
        }
    }
</header>

