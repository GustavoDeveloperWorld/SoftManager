@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Confirmação de registro";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {
        <p>
            Este aplicativo não tem um remetente de e-mail real registrado no momento. Veja <a href="https://aka.ms/aspaccountconf">esta documentação</a> para aprender como configurar um remetente de e-mail real.
            Normalmente, este link seria enviado por e-mail: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Clique aqui para confirmar sua conta</a>
        </p>
    }
    else
    {
        <p>
            Por favor, verifique seu e-mail para confirmar sua conta.
        </p>
    }
}
